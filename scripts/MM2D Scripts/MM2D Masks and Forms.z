		zoraBoom2->CollDetection=false;
		zoraBoom1->Script = LWSCR_ZORABRANG;
		zoraBoom2->Script = LWSCR_ZORABRANG;
		zoraBoom1->Misc[BRANG_MISC_MULT] = 1;
